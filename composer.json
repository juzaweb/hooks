{
    "name": "juzaweb/hooks",
    "description": "Add Actions and filters in Laravel like WordPress.",
    "keywords": [
        "laravel hooks",
        "hooks laravel",
        "hooks laravel like wordpress",
        "hooks for laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "The Anh Dang",
            "homepage": "https://juzaweb.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/support": ">=5.3",
        "opis/closure": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Juzaweb\\Hooks\\": "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Juzaweb\\Hooks\\HooksServiceProvider"
            ]
        }
    }
}
